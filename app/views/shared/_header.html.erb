<header class="sticky top-0 z-50 bg-white border-b border-slate-200">
  <div class="mx-auto max-w-screen-xl px-4 h-16 flex items-center justify-between">
    <!-- 左のスペーサー（中央ロゴ固定用） -->
    <div class="w-10"></div>

    <!-- ロゴ（中央） -->
    <%= link_to root_path, class: "flex items-center justify-center" do %>
      <%= image_tag "Kebab_Tokyo_logo.png",
          alt: "Kebab Tokyo",
          class: "h-11 w-auto object-contain" %>
    <% end %>

    <!-- ハンバーガー（見た目だけ、今回は動作させない） -->
    <button
      type="button"
      class="w-10 h-10 inline-flex items-center justify-center rounded-md hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-slate-300"
      aria-label="メニュー（未実装）"
      disabled
    >
      <span class="sr-only">メニュー（未実装）</span>
      <div class="flex flex-col gap-1.5">
        <span class="block h-0.5 w-6 bg-slate-700 rounded"></span>
        <span class="block h-0.5 w-6 bg-slate-700 rounded"></span>
        <span class="block h-0.5 w-6 bg-slate-700 rounded"></span>
      </div>
    </button>
  </div>
</header>
