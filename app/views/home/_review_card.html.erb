    <div class="aspect-[4/3] bg-stone-100 relative">
      <% if review.images.attached? %>
        <%= image_tag review.images.first, class: "w-full h-full object-cover" %>
      <% elsif review.shop.image_url1.present? %>
        <%= image_tag review.shop.image_url1, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-amber-50 to-amber-100 text-amber-300">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909M3.75 21h16.5A2.25 2.25 0 0 0 22.5 18.75V5.25A2.25 2.25 0 0 0 20.25 3H3.75A2.25 2.25 0 0 0 1.5 5.25v13.5A2.25 2.25 0 0 0 3.75 21Z" />
          </svg>
        </div>
      <% end %>
      <!-- „Çπ„Ç≥„Ç¢„Éê„ÉÉ„Ç∏ -->
      <div class="absolute top-2 right-2 bg-stone-900/80 backdrop-blur-sm text-amber-50 rounded-full px-2 py-0.5 flex items-center gap-1">
        <span class="text-xs">üèÜ</span>
        <span class="text-xs font-black"><%= review.overall_score %></span>
      </div>
    </div>
    <div class="px-3 py-2">
      <p class="text-sm font-bold text-stone-800 truncate"><%= review.shop.name %></p>
      <% if review.shop.area.present? %>
        <p class="text-xs text-amber-700 truncate"><%= review.shop.area %></p>
      <% end %>
    </div>
  </div>
<% end %>
